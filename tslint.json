{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-bitwise": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "\".*\""
      }
    ],
    "no-empty-interface": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-access": false,
    "semicolon": [
      true,
      "never"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  },
  "rulesDirectory": []
}
